<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/image_light_brown"
    android:theme="@style/KeappKlearPage"
    android:id="@+id/main_chat_layout_holder"
    android:orientation="vertical" >

    <include
        android:id="@+id/new_chat_toolbar_layout"
        layout="@layout/chat_tool_bar"

        />

    <ListView
        android:id="@+id/list_view_messages"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:divider="@android:color/transparent"
        android:dividerHeight="10dp"
        android:transcriptMode="alwaysScroll"
        android:layout_marginBottom="5dp"
        android:stackFromBottom="true">
    </ListView>

    <include
        android:id="@+id/new_chat_bar_layout"
        layout="@layout/new_chat_bar"
        >
    </include>

</LinearLayout>
