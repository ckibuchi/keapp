<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:layout_height="fill_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        android:fitsSystemWindows="true">
    </include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >

        <de.hdodenhof.circleimageview.CircleImageView
            android:background="@android:color/transparent"
            android:id="@+id/imgLogo"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"
            android:src="@drawable/keapp_logo_v" />

        <TextView android:id="@+id/logoTextView"
            android:background="@android:color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:text="Keapp"
            android:textSize="16dp"
            android:textColor="@color/default_text_color"
            android:paddingTop="0dp"
            android:paddingBottom="5dp"
            android:textStyle="bold"
            />

        <TextView
            android:background="@drawable/edittext_group_top"
            style="@style/normalTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Thank you for registering with keapp, An email has been sent to your email address."
            />

        <TextView
            android:background="@drawable/edittext_group_top"
            style="@style/normalTextViewStyle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Please Read the email for instructions on how to use this app"
            />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/normalTextViewStyle"
            android:background="@drawable/edittext_group_bottom"
            android:text="    Continue     "
            android:layout_gravity="center"
            android:id="@+id/loginbutton" />

    </LinearLayout>



</LinearLayout>

