<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_weight="1"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/page_detail_content"
    android:layout_marginBottom="3dp"
    android:background="@drawable/page_list_border"
   >
    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:background="#eeeeee">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:id="@+id/layout_header_banner"
        android:layout_height="100dp"
        android:layout_marginBottom="5dp"
        android:orientation="horizontal"
        android:gravity="bottom"
        android:background="@drawable/cloud_bg">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/page_profile_category"
            android:background="@android:color/transparent"
            android:layout_marginTop="3dp"
            android:textSize="18dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:gravity="right"
            android:text="Page Name"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            android:textColor="#ffffff"/>

    </RelativeLayout>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/pages_default_pic"
            android:padding="8dp"
            android:layout_marginRight="5dip"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="30dp"
            android:layout_gravity="center"
            android:background="@drawable/image_curved_border"
            android:id="@+id/circleView"

            />

    </RelativeLayout>


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_weight="2"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:layout_marginTop="2dp"
        android:layout_marginBottom="2dp"
        android:background="@drawable/page_list_border" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:id="@+id/new_story_layout"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="3dp"
                android:background="@android:color/transparent"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_edit"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginTop="2dp"
                android:textSize="14dp"
                android:text="Story"
                android:textColor="#000014"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:background="#eeeeee"
            android:layout_height="fill_parent"></LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:gravity="center">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="25dp"
                android:background="@android:color/transparent"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_camera"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginTop="3dp"
                android:textSize="14dp"
                android:text="Photo"
                android:textColor="#000014"/>

        </LinearLayout>
        <LinearLayout
            android:layout_width="1dp"
            android:background="#eeeeee"
            android:layout_height="fill_parent"></LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:background="@android:color/transparent"
            android:gravity="center">

            <ImageView
                android:layout_marginTop="2dp"
                android:layout_width="25dp"
                android:background="@android:color/transparent"
                android:layout_height="25dp"
                android:layout_marginRight="5dp"
                android:src="@drawable/ic_action_like"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginTop="3dp"
                android:textSize="14dp"
                android:text="Like"
                android:textColor="#000014"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>