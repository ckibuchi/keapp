<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:local="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:orientation="vertical"
    android:fillViewport="true"
    android:background="@android:color/white"
    android:layout_height="fill_parent">

    <include
        android:id="@+id/tool_bar"
        layout="@layout/toolbar"
        android:fitsSystemWindows="true">
    </include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@android:color/white"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"
        >

    <de.hdodenhof.circleimageview.CircleImageView
        android:background="@android:color/transparent"
        android:id="@+id/imgLogo"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_centerInParent="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:src="@drawable/keapp_logo_v" />

    <TextView android:id="@+id/logoTextView"
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:gravity="center_horizontal|center_vertical"
        android:text="Keapp"
        android:textSize="16dp"
        android:textColor="@color/default_text_color"
        android:paddingTop="0dp"
        android:paddingBottom="5dp"
        android:textStyle="bold"
        />

    <EditText android:id="@+id/email_address"
          android:background="@drawable/edittext_group_top"
          style="@style/normalTextViewStyle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_marginTop="5dp"
          android:hint="Email "
          android:inputType="textEmailAddress"
        android:text="" />

    <EditText android:id="@+id/account_password"
          android:background="@drawable/edittext_group_bottom"
          style="@style/normalTextViewStyle"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:inputType="textPassword"
          android:hint="Password"

        />
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@android:color/white"
        android:layout_marginTop="10dp"
        android:gravity="center|center_vertical|left"
       >
        <TextView android:id="@+id/forgot_password"
            android:layout_marginTop="1dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Forgot Password?"
            style="@style/btnStyleBlackCustom"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            />

        <TextView android:id="@+id/submit"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/btnStyleBlackCustom"
            android:layout_marginRight="5dp"
            android:layout_marginTop="1dp"
            android:text="Sign in"
            android:gravity="center"
            android:layout_weight="1"
            android:layout_gravity="center|center_horizontal"
            />

        </LinearLayout>

    <TextView android:id="@+id/sign_up"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:layout_marginTop="5dp"
        android:padding="5dp"
        android:gravity="left"
        android:textColor="@color/default_text_link"
        android:text="New member?"/>

    </LinearLayout>

</LinearLayout>

