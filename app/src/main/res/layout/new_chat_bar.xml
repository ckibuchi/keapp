<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:emojicon="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@android:color/white"
    android:id="@+id/new_chat_layout_parent"
    tools:context=".ChatView">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="@android:color/transparent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/emojicons_pop_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginRight="5dp"
            android:src="@drawable/smiley"
            android:layout_gravity="center|center_vertical"
            android:background="@android:color/transparent"/>


        <com.rube.tt.keapp.utils.emojicons.EmojiconEditText
            android:id="@+id/editEmojicon"
            android:hint="Write Messsage"
            android:layout_weight="17"
            android:textColor="#999999"
            android:inputType="textMultiLine|textShortMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:id="@+id/chat_buttons_view"
            android:gravity="right|center_vertical">

            <ImageView
                android:id="@+id/chat_send_now_button"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:src="@drawable/ic_action_send_now"
                android:visibility="gone"
                android:layout_gravity="center|center_vertical"
                android:background="@android:color/transparent"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/chat_buttons_not_sumit"
                android:background="@android:color/transparent"
                android:visibility="visible"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:src="@drawable/ic_action_camera"
                    android:layout_gravity="center|center_vertical"
                    android:background="@android:color/transparent"/>

                <ImageView
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center|center_vertical"
                    android:src="@drawable/ic_action_mic"
                    android:background="@android:color/transparent"/>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
